<!--pages/post/post.wxml-->
<view>
  <swiper indicator-dots="true" autoplay="true" interval="5000" circular="true">
    <block wx:for="{{dynamicImgs}}" wx:for-item="item" wx:key="key" wx:for-index="idx">
      <swiper-item>
        <image src="{{item}}" mode="scaleToFill" />
      </swiper-item>
    </block>
  </swiper>
  <view class="post-container">
    <view class="post-author-date">
      <image src="{{avatar}}" />
      <text>{{date}}</text>
    </view>
    <text class="post-title">{{title}}</text>
    <image class="post-image" src="{{postImg}}" />
    <text class="post-content">{{postContent}}</text>
    <view class="post-like">
      <image src="../../images/post/zly5.jpg" />
      <text>{{readCount}}</text>
    </view>
  </view>
</view>